<Window x:Class="Library.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="310" Icon="library.ico" ResizeMode="CanMinimize">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFF0A244" Offset="0"/>
            <GradientStop Color="#FFF0A244" Offset="1"/>
            <GradientStop Color="#FFF0C944" Offset="0.508"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="67*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="loginLabel" Content="Login" HorizontalAlignment="Left" Margin="43,36,0,0" VerticalAlignment="Top" Width="87" FontFamily="Arial Rounded MT Bold" FontSize="14"/>
        <Label x:Name="passwordLabel" Content="Password" HorizontalAlignment="Left" Margin="43,70,0,0" VerticalAlignment="Top" Width="87" FontFamily="Arial Rounded MT Bold" FontSize="14"/>
        <TextBox x:Name="loginTextBox" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="25" Margin="135,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="user" FontFamily="Arial Rounded MT Bold"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="135,72,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="120" RenderTransformOrigin="0.5,0.5" Height="22" Password="123"/>
        <Button x:Name="loginButton" Grid.ColumnSpan="2" Content="Login" HorizontalAlignment="Left" Margin="114,122,0,0" VerticalAlignment="Top" Width="78" Height="25" Click="loginButton_Click" BorderBrush="Black" BorderThickness="2" Background="#FFF5CF7D" FontFamily="Cooper Black"/>

    </Grid>
</Window>
