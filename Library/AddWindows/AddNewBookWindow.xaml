<Window x:Name="AddNewBook" x:Class="Library.AddWindows.AddNewBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="New book" Height="334" Width="520.61" ResizeMode="NoResize" Icon="/Library;component/library.ico">
    <Grid x:Name="mainGrid" Margin="0,0,2,0">
        <Label x:Name="nameLabel" Content="Name" HorizontalAlignment="Left" Margin="24,7,0,0" VerticalAlignment="Top" Width="77"/>
        <Label x:Name="yearLabel" Content="Year" HorizontalAlignment="Left" Margin="256,7,0,0" VerticalAlignment="Top" Width="77"/>
        <Label x:Name="pagesLabel" Content="Amount of pages" HorizontalAlignment="Left" Margin="22,45,0,0" VerticalAlignment="Top" Width="108"/>
        <Label x:Name="genreLabel" Content="Genre" HorizontalAlignment="Left" Margin="21,85,0,0" VerticalAlignment="Top" Width="77"/>
        <Label x:Name="languageLabel" Content="Language" HorizontalAlignment="Left" Margin="21,111,0,0" VerticalAlignment="Top" Width="77"/>
        <Label x:Name="locationLabel" Content="Location" HorizontalAlignment="Left" Margin="256,45,0,0" VerticalAlignment="Top" Width="90"/>
        <Label x:Name="publisherLabel" Content="Publisher" HorizontalAlignment="Left" Margin="21,137,0,0" VerticalAlignment="Top" Width="84"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Margin="135,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" TabIndex="0"/>
        <TextBox x:Name="yearTextBox" HorizontalAlignment="Left" Margin="355,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" TabIndex="1"/>
        <TextBox x:Name="pagesTextBox" HorizontalAlignment="Left" Margin="135,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" TabIndex="2"/>
        <ComboBox x:Name="genreComboBox" IsEditable="True" HorizontalAlignment="Left" Margin="132,88,0,0" VerticalAlignment="Top" Width="105" ItemsSource="{Binding Genres}" SelectedValuePath="GenreName" TabIndex="4"/>
        <ComboBox x:Name="languageComboBox" IsEditable="True" HorizontalAlignment="Left" Margin="132,115,0,0" VerticalAlignment="Top" Width="105" ItemsSource="{Binding Languages}" SelectedValuePath="LanguageName" TabIndex="5"/>
        <ComboBox x:Name="publisherComboBox" IsEditable="True" HorizontalAlignment="Left" Margin="132,142,0,0" VerticalAlignment="Top" Width="105" ItemsSource="{Binding Publishers}" SelectedValuePath="PublisherName" TabIndex="6"/>
        <Label x:Name="authotsLabel"  Content="Authors" HorizontalAlignment="Left" Margin="21,171,0,0" VerticalAlignment="Top" Width="90"/>
        <TextBox x:Name="locationTextBox" HorizontalAlignment="Left" Margin="355,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" TabIndex="3"/>
        <Button x:Name="saveButton" Content="Save" HorizontalAlignment="Left" Margin="104,266,0,0" VerticalAlignment="Top" Width="111" Height="22" Click="saveButton_Click" TabIndex="9"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="291,266,0,0" VerticalAlignment="Top" Width="111" Height="22" Click="cancelButton_Click" TabIndex="10"/>
        <Button x:Name="oneMoreAuthor" Content="One more author" HorizontalAlignment="Left" Margin="132,211,0,0" VerticalAlignment="Top" Width="105" Height="20" RenderTransformOrigin="-0.16,0.412" Click="oneMoreAuthor_Click"/>
        <StackPanel x:Name="stackPanel" HorizontalAlignment="Left" Height="81" Margin="132,180,0,0" VerticalAlignment="Top" Width="105">
            <ComboBox x:Name="authorComboBox" IsEditable="True"  ItemsSource="{Binding Authors}" SelectedValuePath="AuthorId" TabIndex="7"/>
            <!--<ComboBox x:Name="authorComboBox" IsEditable="True" HorizontalAlignment="Left" Height="20" Margin="0,0,-5,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" RenderTransformOrigin="0.505,1"/>-->
        </StackPanel>
        <StackPanel x:Name="stackPanelRemove" HorizontalAlignment="Left" Margin="256,201,0,87" Width="100"/>
        <Button x:Name="managementButton" Content="Additional Management&#xD;&#xA; (Edit/Delete Properties)" HorizontalAlignment="Left" Margin="268,95,0,0" VerticalAlignment="Top" Width="222" Height="76" RenderTransformOrigin="0.248,0.453" Click="managementButton_Click" FontFamily="Script MT Bold" FontSize="14" TabIndex="8"/>

    </Grid>
</Window>
