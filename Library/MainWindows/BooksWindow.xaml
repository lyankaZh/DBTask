<Window x:Class="Library.MainWindows.BooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Books" Height="455.909" Width="727.295" Icon="/Library;component/library.ico">
    <Window.Resources>
        <RoutedUICommand x:Key="Edit" Text="Edit" />
        <RoutedUICommand x:Key="Delete" Text="Delete" />
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource Edit}" CanExecute="editCommand_CanExecute" Executed="editCommand_Executed" />
        <CommandBinding Command="{StaticResource Delete}" CanExecute="deleteCommand_CanExecute" Executed="deleteCommand_Executed" />
    </Window.CommandBindings>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Library;component/background.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="582*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <ToolBar x:Name="toolBar" VerticalAlignment="Top" Height="50" Opacity="0.9">
            <ToolBar.Background>
                <SolidColorBrush Color="#FFEACC90" Opacity="0.65"/>
            </ToolBar.Background>
            <Button x:Name="addBookButton" Content="Add Book" Height="50" VerticalAlignment="Top" Width="75" Click="addBookButton_Click" Margin="0,0,0,-5"/>
            <Button x:Name="editBookButton" Command ="{StaticResource Edit}" Content="Edit" Height="50" VerticalAlignment="Top" Width="58" Margin="0,0,0,-5"/>
            <Button x:Name="deleteButton" Command ="{StaticResource Delete}" Content="Delete" Height="50" VerticalAlignment="Top" Width="62" Margin="0,0,0,-5"/>
            <Label x:Name="label" Content="Search criteria:" Height="40" VerticalAlignment="Top" Margin="0,10,0,-5"/>
            <ComboBox x:Name="searchCriteriaComboBox" Height="30" Margin="0,0,0,5" VerticalAlignment="Bottom" Width="120" Text="Критерій пошуку" ItemsSource="{Binding criterias}"/>
            <TextBox x:Name="searchTextTextBox" Height="30" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="Enter text here..." GotFocus="searchTextTextBox_GotFocus" LostFocus="searchTextTextBox_LostFocus"/>
            <Button x:Name="searchButton" Content="Search" Height="30" VerticalAlignment="Top" Width="59" Click="searchButton_Click" Margin="0,10,0,0"/>
        </ToolBar>
        <DataGrid x:Name="booksTable" Margin="16,55,10,0" 
                  VerticalAlignment="Top" AutoGenerateColumns="False" 
                  ItemsSource="{Binding Books}" IsReadOnly="True" 
                  CanUserReorderColumns="False" Background="White" FontFamily="Bookman Old Style">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding BookId}" Width="*" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Authors" Binding="{Binding Authors}" Width="*"/>
                <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="*"/>
                <DataGridTextColumn Header="Pages" Binding="{Binding Pages}" Width="*"/>
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" Width="*"/>
                <DataGridTextColumn Header="Language" Binding="{Binding Language}" Width="*"/>
                <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" />
                <DataGridTextColumn Header="Location" Binding="{Binding Location}" />
                <DataGridTextColumn  Header="In Library" Binding="{Binding IsInLibrary}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
